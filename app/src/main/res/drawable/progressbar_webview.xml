<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/common_white"
                android:endColor="@color/common_white"
                android:startColor="@color/common_white" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="@color/em_color_brand"
                    android:endColor="@color/em_color_brand"
                    android:startColor="@color/em_color_brand" />

            </shape>
        </clip>
    </item>

</layer-list>