<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimary">@color/common_black</item>
    </style>

    <style name="ToolbarNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TitleNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LiveEndTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="room_user_details_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="em_live_user_tv_num_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <style name="em_live_user_tv_num">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="em_live_user_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <style name="main_bottom_view_selected">
        <item name="android:textColor">@color/em_main_color_tab_selected</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="main_bottom_view_normal">
        <item name="android:textColor">@color/em_main_color_tab_normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabLayout.Gift" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="tabTextColor">@color/common_white</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

    <style name="TabLayout.UserManage" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="tabTextAppearance">@style/TabLayout.UserManage.TextAppearance</item>
    </style>

    <style name="TabLayout.UserManage.TextAppearance">
        <item name="android:textSize">@dimen/em_size_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/em_tabs_text_color_selector</item>
    </style>

    <style name="SwitchTheme" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/em_switch_text_selector</item>
    </style>

    <style name="Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:textColor">@color/common_black</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/black</item>
    </style>
</resources>
